<Page x:Class="Client.Pages.PlaylistsPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"  Background="#FF181818"
      Title="PlaylistsPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*">
            </RowDefinition>
            <RowDefinition Height="1*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Playlists" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">

        </TextBlock>
        <DataGrid x:Name="datagrid_Playlist" HorizontalAlignment="Center" Height="350" Margin="50" Grid.Row="1" VerticalAlignment="Center"
                  Width="700" Background="White" BorderBrush="{x:Null}" FontFamily="Gotham Medium" FontSize="20"/>

    </Grid>
</Page>
