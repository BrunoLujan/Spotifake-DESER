<Page x:Class="Client.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800" Background="#FF181818"
      Title="SearchPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*">
            </RowDefinition>
            <RowDefinition Height="1*">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">
        </TextBlock>
        <ComboBox x:Name="ComboBox_filter" Height="auto" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,25,0,0" 
                   materialDesign:HintAssist.Foreground="White" materialDesign:TextFieldAssist.UnderlineBrush="White" Foreground="Black"
                   materialDesign:ColorZoneAssist.Mode="Inverted">
            <ComboBoxItem IsSelected="True">
                Tracks
            </ComboBoxItem>
            <ComboBoxItem>
                Artists
            </ComboBoxItem>
            <ComboBoxItem>
                Albums
            </ComboBoxItem>
            <ComboBoxItem>
                Playlists
            </ComboBoxItem>
        </ComboBox>
        <TextBox x:Name="TextBox_search" materialDesign:HintAssist.Hint="Search" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                 HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="auto"  Foreground="{DynamicResource TextColor}" 
                 materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource TextColor}"
                     materialDesign:HintAssist.Foreground="White" Margin="160,10,0,0" />
        <Button  x:Name="Button_search" HorizontalAlignment="Left" VerticalAlignment="Center" ToolTip="Buscar"  Height="20" Width="30" Margin="350,33,0,0" Click="Button_search_Click">
        </Button>
        <DataGrid x:Name="datagrid_Search" HorizontalAlignment="Center" Height="350" Margin="70" Grid.Row="1" VerticalAlignment="Center"
                  Width="700"  Background="#FF181818" BorderBrush="{x:Null}" FontFamily="Gotham Medium" FontSize="20"/>
        <ListView Grid.Row="0"  x:Name="ListViewTracks"  ItemsSource="{Binding Track}" VerticalAlignment="Top" FontSize="15" 
                  HorizontalAlignment="Center"  Visibility="Hidden">
            <ListView.View >
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding title}" Width="0">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Title" IsHitTestVisible="False" ></GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
