        <Button x:Name="button_SignUp" Content="SIGN UP" Margin="294.4,511,0,0" VerticalAlignment="Top" Width="470" Click="button_SignUp_Click" Background="#FF1CC357" Foreground="White" ClipToBounds="False" Cursor="Hand" Height="51" FontSize="20" FontFamily="Gotham Bold" HorizontalContentAlignment="Center" UseLayoutRounding="False" BorderBrush="{x:Null}" HorizontalAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource RoundButtonTemplate}"/>
